[
    {
        "key": "track",
        "tooltip": "track info",
        "text": "$(book) {player.trackTitle}",
        "command": "xmlya.player.showTrackInfo",
        "when": "player.readyState == 'playing' || player.readyState == 'paused'"
    },
    {
        "key": "prev",
        "tooltip": "Previous track",
        "text": "$(chevron-left)",
        "command": "xmlya.player.goPrev",
        "when": "player.hasPrev "
    },
    {
        "key": "loading",
        "tooltip": "Loading",
        "text": "$(loading~spin)",
        "when": "player.readyState == 'seeking' || player.readyState == 'loading' || player.readyState == 'resolving'"
    },
    {
        "key": "pause",
        "tooltip": "Pause",
        "text": "$(debug-pause)",
        "command": "xmlya.player.pause",
        "when": "player.readyState == 'playing'"
    },
    {
        "key": "play",
        "tooltip": "Play / Resume",
        "text": "$(play)",
        "command": "xmlya.player.resume",
        "when": "player.readyState == 'paused'"
    },
    {
        "key": "next",
        "tooltip": "Next track",
        "text": "$(chevron-right)",
        "command": "xmlya.player.goNext",
        "when": "player.hasNext"
    },
    // {
    //     "key": "time-remaining",
    //     "tooltip": "time timeRemaining",
    //     "text": "{player.timeRemainingFormatted}",
    //     "when": "player.readyState == 'playing' ||  player.readyState == 'pasued' || player.readyState == 'seeking'"
    // },
    {
        "key": "unmute",
        "tooltip": "Unmute",
        "text": "$(mute)",
        "command": "xmlya.player.setVolume",
        "when": "player.isMuted"
    },
    {
        "key": "mute",
        "tooltip": "Mute",
        "text": "$(unmute) {player.volume}",
        "command": "xmlya.player.setVolume",
        "when": "!player.isMuted"
    },
    // {
    //     "key": "volume",
    //     "tooltip": "Volume",
    //     "text": "{player.volume}",
    //     "command": "xmlya.player.loopVolume",
    //     "when": "player.readyState != 'unload'"
    // },
    {
        "key": "speed",
        "tooltip": "Set playback speed",
        "text": "{player.speed}x",
        "command": "xmlya.player.setSpeed"
        // "when": "player.readyState != 'unload'"
    },
    {
        "key": "playlist",
        "tooltip": "playlist",
        "text": "$(note)",
        "command": "xmlya.player.showPlaylist",
        "when": "player.hasNext || player.hasPrev"
    }
]
