{
    "name": "@xmlya/vsc",
    "version": "1.0.1",
    "description": "vscode extension for Ximalaya",
    "displayName": "Ximalaya",
    "publisher": "ktan",
    "author": "Kevin Tan",
    "main": "./dist/extension",
    "icon": "static/logo_full.svg",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "icon": "static/logo_hollow.svg",
                    "id": "xmlya-container",
                    "title": "Ximalaya FM"
                }
            ]
        },
        "views": {
            "xmlya-container": [
                {
                    "id": "xmlya-playing",
                    "name": "Playing",
                    "contextualTitle": "Playing",
                    "type": "webview"
                },
                {
                    "id": "xmlya-user",
                    "contextualTitle": "User",
                    "name": "User",
                    "type": "tree"
                },
                {
                    "id": "xmlya-discover",
                    "contextualTitle": "Discover",
                    "name": "Discover",
                    "type": "tree"
                },
                {
                    "id": "xmlya-category",
                    "contextualTitle": "Category",
                    "name": "Category",
                    "type": "tree"
                }
            ]
        },
        "configuration": [
            {
                "title": "Ximalaya",
                "properties": {
                    "xmlya.cookie": {
                        "type": "string",
                        "default": "",
                        "description": "User login cookie of Ximalaya web site",
                        "scope": "application"
                    },
                    "xmlya.mpvBinary": {
                        "type": "string",
                        "default": "mpv",
                        "markdownDescription": "absolute path for mpv binary (need restart to take effect, see [install guide](https://mpv.io/installation/))",
                        "scope": "application"
                    },
                    "xmlya.mpvArguments": {
                        "type": "array",
                        "default": [],
                        "markdownDescription": "extra arguments for mpv (need restart to take effect, see [mpv manual](https://mpv.io/manual/stable/))",
                        "scope": "application"
                    },
                    "xmlya.playctrls": {
                        "type": "array",
                        "default": [],
                        "description": "override the play controls in status bar",
                        "scope": "application"
                    },
                    "xmlya.playbackStart": {
                        "type": "number",
                        "default": 0,
                        "description": "start offset of playback, in seconds",
                        "scope": "application"
                    },
                    "xmlya.playbackEnd": {
                        "type": "number",
                        "default": 0,
                        "description": "end offset of playback, in seconds",
                        "scope": "application"
                    },
                    "xmlya.statusBarItemBase": {
                        "type": "number",
                        "default": -100,
                        "description": "base priority of items in status bar",
                        "scope": "application"
                    }
                }
            }
        ],
        "commands": [
            {
                "title": "Playing History",
                "command": "xmlya.user.playHistory",
                "category": "Ximalaya"
            },
            {
                "title": "Subscriptions",
                "command": "xmlya.user.subscriptions",
                "category": "Ximalaya"
            },
            {
                "title": "Favorites",
                "command": "xmlya.user.favorites",
                "category": "Ximalaya"
            },
            {
                "title": "Purchased Albums",
                "command": "xmlya.user.purchasedAlbums",
                "category": "Ximalaya"
            },
            {
                "title": "Play Track",
                "command": "xmlya.player.playTrack",
                "category": "Ximalaya"
            },
            {
                "title": "Play / Resume",
                "command": "xmlya.player.resume",
                "category": "Ximalaya"
            },
            {
                "title": "Pause",
                "command": "xmlya.player.pause",
                "category": "Ximalaya"
            },
            {
                "title": "Toggle Mute",
                "command": "xmlya.player.toggleMute",
                "category": "Ximalaya"
            },
            {
                "title": "Set Volume",
                "command": "xmlya.player.setVolume",
                "category": "Ximalaya"
            },
            {
                "title": "Play previous track",
                "command": "xmlya.player.goPrev",
                "category": "Ximalaya"
            },
            {
                "title": "Play next track",
                "command": "xmlya.player.goNext",
                "category": "Ximalaya"
            },
            {
                "title": "Show current track info",
                "command": "xmlya.player.showTrackInfo",
                "category": "Ximalaya"
            },
            {
                "title": "Show current play list",
                "command": "xmlya.player.showPlaylist",
                "category": "Ximalaya"
            },
            {
                "title": "Show track audio url",
                "command": "xmlya.player.showTrackUrl",
                "category": "Ximalaya"
            },
            {
                "title": "Set playback speed",
                "command": "xmlya.player.setSpeed",
                "category": "Ximalaya"
            },
            {
                "title": "Toggle progress",
                "command": "xmlya.player.toggleProgress",
                "category": "Ximalaya"
            },
            {
                "title": "Show album tracks",
                "command": "xmlya.common.showAlbumTracks",
                "category": "Ximalaya"
            },
            {
                "title": "Show user",
                "command": "xmlya.common.showUser",
                "category": "Ximalaya"
            },
            {
                "title": "View comments",
                "command": "xmlya.player.viewComments",
                "category": "Ximalaya"
            },
            {
                "title": "Refresh",
                "command": "xmlya.category.refresh",
                "icon": "$(refresh)"
            },
            {
                "title": "Search",
                "command": "xmlya.global.search",
                "icon": "$(search)"
            },
            {
                "title": "Refresh",
                "command": "xmlya.discover.refresh",
                "icon": "$(refresh)"
            }
        ],
        "colors": [
            {
                "id": "xmlya.playCtrl.color",
                "description": "color for player controller in status bar",
                "defaults": {
                    "dark": "errorForeground",
                    "light": "errorForeground",
                    "highContrast": "#010203"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "xmlya.category.refresh",
                    "when": "view == xmlya-category",
                    "group": "navigation"
                },
                {
                    "command": "xmlya.discover.refresh",
                    "when": "view == xmlya-discover",
                    "group": "navigation"
                },
                {
                    "command": "xmlya.global.search",
                    "when": "view == xmlya-playing",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "start": "webpack -w --mode development",
        "build": "webpack --mode production",
        "vscode:prepublish": "yarn build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "keywords": [
        "vscode",
        "ximalaya",
        "audio",
        "player"
    ],
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^14.14.9",
        "@types/webpack": "^4.41.25",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "eslint": "^7.14.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "json5-loader": "^4.0.1",
        "lint-staged": "^10.5.1",
        "prettier": "^2.2.0",
        "ts-loader": "^8.0.11",
        "tsconfig-paths-webpack-plugin": "^3.3.0",
        "tslib": "^2.0.3",
        "typescript": "^4.1.2",
        "webpack": "^5.8.0",
        "webpack-cli": "^4.2.0"
    },
    "dependencies": {
        "@types/vscode": "^1.51.0",
        "@xmlya/mpv": "^1.0.0",
        "@xmlya/sdk": "^1.0.0",
        "ansi-escapes": "^4.3.1",
        "reflect-metadata": "^0.1.13",
        "throttle-debounce-ts": "^1.1.1",
        "vscode-test": "^1.4.1"
    }
}
