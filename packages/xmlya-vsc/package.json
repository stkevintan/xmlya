{
    "name": "@xmlya/vsc",
    "version": "1.0.1",
    "description": "vscode extension for Ximalaya",
    "displayName": "Ximalaya",
    "publisher": "ktan",
    "author": "Kevin Tan",
    "main": "./dist/extension",
    "icon": "static/icon.png",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": [
            {
                "title": "Ximalaya configuration",
                "properties": {
                    "xmlya.cookie": {
                        "type": "string",
                        "default": "",
                        "description": "User login cookie of Ximalaya web site",
                        "scope": "application"
                    },
                    "xmlya.mpvBinary": {
                        "type": "string",
                        "default": "",
                        "description": "absolute path for mpv binary",
                        "scope": "application"
                    }
                }
            }
        ],
        "commands": [
            {
                "title": "User Menu",
                "command": "xmlya.user.menu",
                "category": "Ximalaya"
            },
            {
                "title": "Playing History",
                "command": "xmlya.user.playHistory",
                "category": "Ximalaya"
            },
            {
                "title": "Subscriptions",
                "command": "xmlya.user.subscriptions",
                "category": "Ximalaya"
            },
            {
                "title": "Favorites",
                "command": "xmlya.user.favorites",
                "category": "Ximalaya"
            },
            {
                "title": "Purchased Albums",
                "command": "xmlya.user.purchasedAlbums",
                "category": "Ximalaya"
            },
            {
                "title": "Play Track",
                "command": "xmlya.player.playTrack",
                "category": "Ximalaya"
            },
            {
                "title": "Play",
                "command": "xmlya.player.play",
                "category": "Ximalaya"
            },
            {
                "title": "Pause",
                "command": "xmlya.player.pause",
                "category": "Ximalaya"
            },
            {
                "title": "Toggle Mute",
                "command": "xmlya.player.toggleMute",
                "category": "Ximalaya"
            },
            {
                "title": "Loop Volume",
                "command": "xmlya.player.loopVolume",
                "category": "Ximalaya"
            },
            {
                "title": "Play previous track",
                "command": "xmlya.player.goPrev",
                "category": "Ximalaya"
            },
            {
                "title": "Play next track",
                "command": "xmlya.player.goNext",
                "category": "Ximalaya"
            },
            {
                "title": "Show current track info",
                "command": "xmlya.player.trackInfo",
                "category": "Ximalaya"
            },
            {
                "title": "Set playback speed",
                "command": "xmlya.player.setSpeed",
                "category": "Ximalaya"
            }
        ],
        "menus": {}
    },
    "scripts": {
        "start": "webpack -w --mode development",
        "build": "webpack --mode production",
        "vscode:prepublish": "yarn build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "keywords": [
        "vscode",
        "ximalaya",
        "audio",
        "player"
    ],
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^14.14.9",
        "@types/webpack": "^4.41.25",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "eslint": "^7.14.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.1",
        "prettier": "^2.2.0",
        "ts-loader": "^8.0.11",
        "tsconfig-paths-webpack-plugin": "^3.3.0",
        "tslib": "^2.0.3",
        "typescript": "^4.1.2",
        "webpack": "^5.8.0",
        "webpack-cli": "^4.2.0"
    },
    "dependencies": {
        "@types/vscode": "^1.51.0",
        "@xmlya/sdk": "^1.0.0",
        "@xmlya/mpv": "^1.0.0",
        "reflect-metadata": "^0.1.13",
        "ts-debounce": "^2.0.1",
        "vscode-test": "^1.4.1"
    }
}
