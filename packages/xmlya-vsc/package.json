{
    "name": "@xmlya/vsc",
    "version": "1.0.1",
    "description": "vscode extension for Ximalaya",
    "displayName": "Ximalaya",
    "publisher": "ktan",
    "author": "Kevin Tan",
    "main": "./dist/extension",
    "icon": "static/icon.png",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": [
            {
                "title": "Ximalaya configuration",
                "properties": {
                    "xmlya.cookie": {
                        "type": "string",
                        "default": "",
                        "description": "User login cookie of Ximalaya web site",
                        "scope": "application"
                    }
                }
            }
        ],
        "commands": [
            {
                "title": "User Menu",
                "command": "xmlya.user.menu",
                "category": "Ximalaya"
            },
            {
                "title": "Play History",
                "command": "xmlya.user.playHistory",
                "category": "Ximalaya"
            },
            {
                "title": "Subscriptions",
                "command": "xmlya.user.subscriptions",
                "category": "Ximalaya"
            },
            {
                "title": "Favorites",
                "command": "xmlya.user.favorites",
                "category": "Ximalaya"
            },
            {
                "title": "Purchased Albums",
                "command": "xmlya.user.purchasedAlbums",
                "category": "Ximalaya"
            },
            {
                "title": "Play Track",
                "command": "xmlya.player.playTrack",
                "category": "Ximalaya"
            },
            {
                "title": "Play",
                "command": "xmlya.player.play",
                "category": "Ximalaya"
            }
        ],
        "menus": {}
    },
    "scripts": {
        "start": "rollup -c ./rollup.config.js -w",
        "build": "rollup -c ./rollup.config.js",
        "vscode:prepublish": "yarn build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "keywords": [
        "vscode",
        "ximalaya",
        "audio",
        "player"
    ],
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^16.0.0",
        "@rollup/plugin-node-resolve": "^10.0.0",
        "@rollup/plugin-typescript": "^6.1.0",
        "@types/micromatch": "^4.0.1",
        "@types/node": "^14.14.9",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "eslint": "^7.14.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.1",
        "prettier": "^2.2.0",
        "rollup": "^2.33.3",
        "tslib": "^2.0.3",
        "typescript": "^4.1.2"
    },
    "dependencies": {
        "@ffmpeg/ffmpeg": "^0.9.6",
        "@types/vscode": "^1.51.0",
        "@xmlya/sdk": "^1.0.0",
        "micromatch": "^4.0.2",
        "reflect-metadata": "^0.1.13",
        "vscode-test": "^1.4.1"
    }
}
